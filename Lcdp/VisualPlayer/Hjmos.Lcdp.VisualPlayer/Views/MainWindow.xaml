<Window
    x:Class="Hjmos.Lcdp.VisualPlayer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:prism="http://prismlibrary.com/"
    xmlns:u="clr-namespace:Hjmos.Lcdp.VisualEditor.Core.Controls;assembly=Hjmos.Lcdp.VisualEditor.Core"
    Title="{Binding Title}"
    Width="2534.4" Height="950.4" prism:ViewModelLocator.AutoWireViewModel="True"
    WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1" ResizeBorderThickness="4" />
    </WindowChrome.WindowChrome>
    <Viewbox>
        <u:PageShell Width="1920" Height="1080" PageGuid="{Binding PageGuid}" PageParameters="{Binding PageParameters}">
            <!--<u:PageShell.RenderTransform>
                <ScaleTransform ScaleX="0.8" ScaleY="0.8" />
            </u:PageShell.RenderTransform>-->
        </u:PageShell>
    </Viewbox>
</Window>
