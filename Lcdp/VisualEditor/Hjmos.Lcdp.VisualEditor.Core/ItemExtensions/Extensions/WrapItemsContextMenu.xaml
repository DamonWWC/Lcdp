             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Translation="clr-namespace:Hjmos.Lcdp.VisualEditor.Core"
>
	<MenuItem Header="{Binding WrapInCanvas, Source={x:Static Translation:Translations.Instance}}" Click="Click_WrapInCanvas">
        <MenuItem.Icon>
            <Image Width="16" Source="/Hjmos.Lcdp.VisualEditor.Assets;component/Images/canvas.png" />
        </MenuItem.Icon>
    </MenuItem>
        <MenuItem Header="{Binding WrapInGrid, Source={x:Static Translation:Translations.Instance}}" Click="Click_WrapInGrid">
		<MenuItem.Icon>
            <Image Source="/Hjmos.Lcdp.VisualEditor.Assets;component/Images/grid.png" />
		</MenuItem.Icon>
	</MenuItem>
</ContextMenu>
