<UserControl
    x:Class="Hjmos.Lcdp.VisualEditor.MainModule.Views.StatusBarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" FontFamily="PingFangSC-Regular" FontSize="10">
    <StackPanel VerticalAlignment="Center" Background="#343434" Orientation="Horizontal">
        <TextBlock Foreground="White" Text="{Binding State.PageShell.Width, StringFormat=分辨率：{0}}" />
        <TextBlock Foreground="White" Text="{Binding State.PageShell.Height, StringFormat=X{0} / 比例: 100%}" />
    </StackPanel>
</UserControl>
