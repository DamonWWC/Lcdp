<Window x:Class="Hjmos.Lcdp.MessageCenter.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        FontFamily="Microsoft YaHei" FontWeight="ExtraLight"
        Title="MainWindow" Height="360" Width="520">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="控制端" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="10"/>
        <!--<TextBox Text="127.0.0.1:9999" FontSize="24" Grid.Row="1" VerticalContentAlignment="Center" Margin="10" />-->
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="切换到监测预警" FontSize="20" Width="200" Height="60" Click="Button2_Click"  Margin="10"/>
            <Button Content="切换到应急资源" FontSize="20" Width="200" Height="60" Click="Button3_Click"  Margin="10"/>
        </StackPanel>
        
        <Button Content="弹窗" FontSize="20" Width="200" Height="60" Click="Button_Click" Grid.Row="2" Margin="10"/>
    </Grid>
</Window>
